package com.aurionpro.model;

import java.util.Scanner;

public class Player1 implements IPlayer {
    public static Scanner scanner = new Scanner(System.in);

    @Override
    public void play() {
        // Define the matrix size
        char[][] matrix = new char[3][3];

        // Initialize the matrix with empty spaces or any default value
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                matrix[i][j] = ' ';
            }
        }

        System.out.println("Enter 1 for X and 0 for 0");
        int choice = scanner.nextInt();
        if (choice != 1 && choice != 0) {
            System.out.println("Invalid choice, please choose either 1 or 0");
            return;
        }

        System.out.println("Enter the position where you want to insert your choice. Enter the row number and column number (0, 1, or 2):");
        int row = scanner.nextInt();
        int column = scanner.nextInt();

        // Check if the entered position is valid
        if (row < 0 || row >= 3 || column < 0 || column >= 3) {
            System.out.println("Invalid position. Please enter a row and column between 0 and 2.");
            return;
        }

        // Assign "X" or "O" based on choice
        if (matrix[row][column] == ' ') {
            if (choice == 1) {
                matrix[row][column] = 'X';
            } else {
                matrix[row][column] = 'O';
            }
        } else {
            System.out.println("Position already occupied. Please choose a different position.");
            return;
        }

        // Display the updated matrix
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                System.out.print(matrix[i][j] + " ");
            }
            System.out.println();
        }
    }
}
