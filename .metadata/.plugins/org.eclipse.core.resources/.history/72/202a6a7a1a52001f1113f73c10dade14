package com.aurionpro.model;
import java.util.List;

public class Library {
	
	List<Book> books;
	List<INotifier> notifiers;
	
	
	
	public Library(List<Book> books, List<INotifier> notifiers) {
		super();
		this.books = books;
		this.notifiers = notifiers;
	}
	//state of book changes notify the notifiers
	
	public void addBook(Book book) {
		books.add(book);
	}
	
	public List<Book> getBooks() {
		return books;
	}

	public void setBooks(List<Book> books) {
		this.books = books;
	}

	public List<INotifier> getNotifiers() {
		return notifiers;
	}

	public void setNotifiers(List<INotifier> notifiers) {
		this.notifiers = notifiers;
	}

	public void removeBook(Book book) {
		books.remove(book);
	}
	
	public void borrowBook(Book book, String user){
		books.remove(book);
	}
	
	public void returnBook(Book book,String user) {
		books.add(book);
	}
	

}
