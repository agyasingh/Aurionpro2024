package com.aurionpro.test;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
import com.aurionpro.model.*;

public class AccountNotifierTest {
    private static Scanner scanner = new Scanner(System.in);
    private static Account account;

    public AccountNotifierTest(Account account) {
        this.account = account;
    }

    public static void main(String[] args) {
        List<INotifier> notifiers = new ArrayList<>();
        account = new Account(123456, "John Doe", 1000.0, notifiers);

        while (true) {
            System.out.println("Choose your operations:");
            System.out.println("1 for deposit");
            System.out.println("2 to withdraw");
            System.out.println("3 to check balance");
            System.out.println("4 to register notifier");
            System.out.println("5 to exit");
            int choice = scanner.nextInt();
            switch (choice) {
                case 1:
                    System.out.println("Enter amount you want to credit:");
                    int creditAmount = scanner.nextInt();
                    account.deposit(creditAmount);
                    break;
                case 2:
                    System.out.println("Enter amount you want to withdraw:");
                    int debitAmount = scanner.nextInt();
                    account.withdraw(debitAmount);
                    break;
                case 3:
                    System.out.println("Your existing balance is: " + account.getBalance());
                    break;
                case 4:
                    registerNotifier();
                    break;
                case 5:
                    System.out.println("Exiting...");
                    System.exit(0);
                default:
                    System.out.println("Invalid choice. Please try again.");
                    break;
            }
        }
    }

    private static void registerNotifier() {
        System.out.println("Choose notifier type to register (1: Email, 2: SMS):");
        int notifierChoice = scanner.nextInt();
        switch (notifierChoice) {
            case 1:
                account.registerNotifier(new EmailNotifier(account));
                break;
            case 2:
                account.registerNotifier(new SMSNotifier(account));
                break;
            default:
                System.out.println("Invalid notifier choice.");
                break;
        }
    }
}
