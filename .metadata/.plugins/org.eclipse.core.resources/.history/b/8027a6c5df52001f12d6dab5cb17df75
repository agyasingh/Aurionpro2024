package com.aurionpro.model;

public class TicTacBoard {
	private char[][] board;
    private static final int SIZE = 3; // Size of the board

    public TicTacBoard() {
        board = new char[SIZE][SIZE];
        resetBoard();
    }

    public void resetBoard() {
        for (int i = 0; i < SIZE; i++) {
            for (int j = 0; j < SIZE; j++) {
                board[i][j] = '-';
            }
        }
    }

    public boolean makeMove(int row, int col, char symbol) {
        if (row < 0 || row >= SIZE || col < 0 || col >= SIZE) {
            return false; // Invalid move
        }
        if (board[row][col] != '-') {
            return false; // Cell already occupied
        }
        board[row][col] = symbol;
        return true;
    }

    public boolean checkForWin() {
        // Check rows
        for (int i = 0; i < SIZE; i++) {
            if (board[i][0] != '-' && board[i][0] == board[i][1] && board[i][0] == board[i][2]) {
                return true; // Row i is all the same symbol
            }
        }

        // Check columns
        for (int j = 0; j < SIZE; j++) {
            if (board[0][j] != '-' && board[0][j] == board[1][j] && board[0][j] == board[2][j]) {
                return true; // Column j is all the same symbol
            }
        }

        // Check diagonals
        if (board[0][0] != '-' && board[0][0] == board[1][1] && board[0][0] == board[2][2]) {
            return true; // Main diagonal
        }
        if (board[0][2] != '-' && board[0][2] == board[1][1] && board[0][2] == board[2][0]) {
            return true; // Anti-diagonal
        }

        return false; // No winning condition found
    }

    public boolean isBoardFull() {
        // Check if the board is completely filled
        for (int i = 0; i < SIZE; i++) {
            for (int j = 0; j < SIZE; j++) {
                if (board[i][j] == '-') {
                    return false; // Board is not full
                }
            }
        }
        return true; // Board is full
    }
}


