package com.aurionpro.model;

public class PlayGame {
	char[][] matrix = new char[3][3];
	IPlayer player1=new Player(matrix);
	IPlayer player2=new Player(matrix);
	
	public void playingtictactoe(){

        boolean gameContinues = true;
        int turns = 0;
		while (gameContinues) {
            System.out.println("Player1's turn:");
            player1.play();
            turns++;
            if (checkWin() || turns >= 9) {
                gameContinues = false;
                break;
            }

            printMatrix(matrix); // Display the matrix after Player1's move

            System.out.println("Player2's turn:");
            player2.play();
            turns++;
            if (checkWin() || turns >= 9) {
                gameContinues = false;
            }

            printMatrix(matrix); 
	
		 // Display the updated matrix
      
	}
			
		

private void printMatrix(char[][] matrix) {
		// TODO Auto-generated method stub
	  for (int i = 0; i < 3; i++) {
          for (int j = 0; j < 3; j++) {
              System.out.print(matrix[i][j] + " ");
          }
          System.out.println();
      }
	}




}

